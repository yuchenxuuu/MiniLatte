
    <% if !@courses.nil? %>
    <table class="table table-responsive table-striped">
    <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>
  
    <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Enroll', "/enroll/#{course.id}", class: 'btn btn-success', method: :post %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  <% end %>